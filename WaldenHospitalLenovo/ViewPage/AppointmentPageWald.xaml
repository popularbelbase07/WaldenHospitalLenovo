<Page
    x:Class="WaldenHospitalLenovo.ViewPage.AppointmentPageWald"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:WaldenHospitalLenovo.ViewModel"
    xmlns:gridexperiments="using:WaldenHospitalLenovo.Model"
       
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
   <Page.DataContext>
       <viewModel:AppointmentVm></viewModel:AppointmentVm>
   </Page.DataContext>
    <Grid Background="CadetBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.DataContext>
            <viewModel:AppointmentVm></viewModel:AppointmentVm>
        </Grid.DataContext>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <CalendarDatePicker PlaceholderText="Select A Date" Header="CALANDER" FontSize="18"  HorizontalAlignment="Right"
                                Margin="190,150,250,50" Foreground="White" BorderBrush="Transparent" BorderThickness="2" Background="Transparent">
            </CalendarDatePicker>

        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TimePicker Background="Transparent" BorderThickness="2" Foreground="White" >

            </TimePicker>

        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
            <TextBlock Text="Patient's Name" FontSize="15" Width="150"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <!--<SearchBox Height="25" Width="127" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.24,0.6"/>-->
            <StackPanel>
                <SearchBox x:Name="SearchPatient" QueryChanged="SrchPat_OnQueryChanged"></SearchBox>
                <ListBox Background="CornflowerBlue" x:Name="SearchlistBox" FontSize="26" >
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="gridexperiments:Patient">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock   Foreground="White"  Text="{x:Bind Name}" FontSize="24" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>


</StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Doctor's Name" FontSize="23" Width="190" />
            <ComboBox  x:Name="ComboBox1" ItemsSource="{Binding SeeDoctor}" Width="150"  BorderThickness="2" BorderBrush="Transparent">

            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="BOOK APPOINTMENT" FontSize="25" Width="300" Background="Transparent" BorderThickness="2"/>
            <Line Fill="White" Stroke="White" Height="0.5" StrokeThickness="2" X1="500"/>
            <Button Command ="{Binding NewRegistration}"  Content="NEW REGISTRATION" FontSize="25" Width="300" Background="Transparent" BorderThickness="2" Click="Button_Click"/>
        </StackPanel>



    </Grid>
</Page>
